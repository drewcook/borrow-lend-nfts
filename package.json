{
	"name": "nextjs-web3-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "yarn lint:code && yarn lint:formatting",
		"lint:fix": "yarn lint:code:fix && yarn lint:formatting:fix",
		"lint:code": "next lint",
		"lint:code:fix": "next lint --fix",
		"lint:formatting": "prettier . --check",
		"lint:formatting:fix": "prettier . --write --log-level=silent",
		"postinstall": "husky install",
		"contracts:compile": "cd truffle && npx truffle compile",
		"contracts:test": "cd truffle && npx truffle test --network development",
		"contracts:deploy": "cd truffle && npx truffle migrate --reset --network development",
		"contracts:deploy:testnet:dryrun": "cd truffle && npx truffle migrate --reset --network goerli --dry-run",
		"contracts:deploy:testnet": "cd truffle && npx truffle migrate --reset --network goerli"
	},
	"dependencies": {
		"@emotion/react": "^11.11.1",
		"@emotion/styled": "^11.11.0",
		"@fontsource/roboto": "^5.0.8",
		"@infura/sdk": "^2.4.3",
		"@metamask/sdk-react-ui": "^0.10.0",
		"@mui/icons-material": "^5.14.8",
		"@mui/material": "^5.14.8",
		"@openzeppelin/contracts": "^5.0.0",
		"@truffle/hdwallet-provider": "^2.1.15",
		"@types/node": "20.5.9",
		"@types/react": "18.2.21",
		"@types/react-dom": "18.2.7",
		"dotenv": "^16.3.1",
		"eslint": "8.48.0",
		"eslint-config-next": "13.4.19",
		"next": "13.4.19",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"typescript": "5.2.2",
		"viem": "^1.10.4",
		"wagmi": "^1.4.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"altheajs-prettier-config": "^1.3.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"husky": "^8.0.0",
		"prettier": "^3.0.3",
		"truffle-assertions": "^0.9.2"
	}
}
